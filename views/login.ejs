<body>
    <main>
        <header>
            <h3 class="login" id="login">Login</h3>
           
        </header>
        <!-- <p>errors</p>  handling the error -->
        <form action="/login" method="post">
            <section class="email-section">
              
                <label for="email">Email</label>
                <input type="text" placeholder="Enter your email" id="login-email" name="email">
            </section>

            <section class="password-section">
               
                <label for="password">Password</label>
                <input type="password" placeholder="Enter your password"  id="login-password" name="password">
            </section>

            <button type="submit" class="login-button" ">Login</button>
        </form>
    </main>


</body>

</html>